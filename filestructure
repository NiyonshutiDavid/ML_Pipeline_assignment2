#!/bin/bash
# Create main project directory
mkdir -p ML_Pipeline_assignment2/{data,images,audio,notebooks,scripts,demo}

# Team members (deduplicated and formatted for folder naming)
declare -a members=("annabelle" "chance" "tamanda" "nicolle" "david")

# Create individual subfolders for image and audio per member
for member in "${members[@]}"
do
    mkdir -p ML_Pipeline_assignment2/images/$member
    mkdir -p ML_Pipeline_assignment2/audio/$member
done

# Create data files
touch ML_Pipeline_assignment2/data/{customer_social_profiles.csv,customer_transactions.csv,merged_dataset.csv,image_features.csv,audio_features.csv}

# Create core Python scripts
touch ML_Pipeline_assignment2/scripts/{merge_data.py,image_processing.py,audio_processing.py,model_training.py,cli_app.py}

# Create Jupyter notebook
touch ML_Pipeline_assignment2/notebooks/data_processing.ipynb

# Documentation files
touch ML_Pipeline_assignment2/{team.md,README.md}

# Placeholder for demo content (e.g. video or screenshots)
touch ML_Pipeline_assignment2/demo/README.md

echo "âœ… Project structure for ML_Pipeline_assignment2 created successfully!"
